<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:orientation="vertical" >


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <LinearLayout
                android:id="@+id/account_settings"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:background="@color/text_red"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_touxiang"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_account"/>
                <TextView
                    android:id="@+id/account_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="已登录"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"/>

                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_daochu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/daochu"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"/>

            <TextView
                style="@style/TextSettingItem"
                android:background="@drawable/round_corner_item_below_bg"
                android:text="导出与备份"/>

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginEnd="3dp"
                android:src="@drawable/jiantou"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

            <View
                style="@style/horizontal_decoration_style"
                android:background="#8c8c8c"/>

            <LinearLayout
                android:id="@+id/ll_zijin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/zijing"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"/>

                <TextView
                    style="@style/TextSettingItem"
                    android:background="@drawable/round_corner_item_below_bg"
                    android:text="资金管理"/>

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginEnd="3dp"
                    android:src="@drawable/jiantou"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <View
                style="@style/horizontal_decoration_style"
                android:background="#8c8c8c"/>


            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/text_red"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:text="退出"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="18sp"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="SwipeMenuView">
        <attr name="swipeEnable" format="boolean"/>
        <attr name="ios" format="boolean"/>
        <attr name="leftSwipe" format="boolean"/>
    </declare-styleable>

    <!--验证码按钮-->
    <declare-styleable name="VerifyCodeButton">
        <!--默认 Button 背景-->
        <attr name="android:background"/>
        <!--点击获取验证码后 Button 背景,reference指资源id -->
        <attr name="vcb_clickAfterBackground" format="reference"/>
        <!--倒计时时间，单位为秒-->
        <attr name="vcb_countdownTime" format="integer"/>
        <!--倒计时后的提示文字，如：重新获取-->
        <attr name="vcb_afterCountdownText" format="string"/>
    </declare-styleable>

    <declare-styleable name="Search_View">
        <attr name="textSizeSearch" format="dimension"/>
        <attr name="textColorSearch" format="color"/>
        <attr name="textHintSearch" format="string"/>
        <attr name="searchLayoutHeight" format="integer"/>
        <attr name="searchLayoutColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="CircleView">
        <attr name="paint_color" format="color"/>
        <attr name="paint_text" format="string"/>
    </declare-styleable>
    <declare-styleable name="RoundProgressBar">
        <attr name="roundColor" format="color"/>
        <attr name="roundProgressColor" format="color"/>
        <attr name="roundWidth" format="dimension"/>
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="max" format="integer"/>
        <attr name="textIsDisplayable" format="boolean"/>
        <attr name="style">
            <enum name="STROKE" value="0"/>
            <enum name="FILL" value="1"/>
        </attr>
    </declare-styleable>
</resources>